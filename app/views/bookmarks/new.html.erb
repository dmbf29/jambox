<div class="container">
  <div class="row">
    <div class="col">
      <h1>Add Album</h1>
      <%= form_tag movies_path, method: :get do %>
        <%= text_field_tag :query,
          params[:query],
          class: "form-control",
          placeholder: "Find a movie"
        %>
        <%= submit_tag "Search", class: "btn btn-primary" %>
      <% end %>
      <%= simple_form_for @bookmark do |f| %>
        <%= f.simple_fields_for :album do |d_form| %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
