<div class="container" data-controller='album-add'>
  <div class="row mt-5">
    <div class="col">
      <h1>Add Album</h1>
      <%= form_tag search_albums_path, remote: true, method: :get do %>
        <%= text_field_tag :query,
            params[:query],
            class: "form-control",
            placeholder: "Search for artist or album"
          %>
        <%= submit_tag "Search", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col" id='album-suggestions'>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col">
      <%= simple_form_for @album do |f| %>
        <fieldset className="form-group check_boxes optional snippet_tags">
          <input type="hidden" name="tags[tag_ids][]" value="" />
          <% current_user.owned_tags.each do |tag| %>
            <div className="tag-item">
              <span><%= tag %></span>
            </div>
          <% end %>
        </fieldset>
        <%= f.simple_fields_for :artist do |art_form| %>
        <% end %>
        <%= f.submit 'Add Album', class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
